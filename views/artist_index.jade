style
  | body {
  |   background-color: #f0f0f0;
  |   color: #555;
  |   padding: 100px 40px;
  |   font-family: 'NanumMyeongjo';
  | }
  | hr { border: 0; border-top: solid 1px #888;  }
  | a { text-decoration: none; color: #C0392B  }
  | #artist .col:nth-child(5n) { clear: both; }

h1
  span(style='border-top:solid 3px #888; padding-top: 10px;') 미러볼뮤직
  |  
  | 신규 앨범
br

for item in publisher
  img(src=item.album.imageUrl, style='width: 120px; float:left; margin-right: 20px;')
  h1(style='float:right;')= item.artist.name
  h3= item.album.name
  p= item.album.titleName
  p= item.album.publishedAt
  p(style='clear: both; white-space:pre-line; height: 200px; overflow: auto; padding: 20px 200px;')= item.album.review
  hr

br
br
br
br


h1
  span(style='border-top:solid 3px #888; padding-top: 10px;') 인디음악
  |  
  | 새로운 앨범

#artist.row
  for item in artist
    .col(style='width:20%; float:left;')
      h1= item.album.publishedAt
      img(src=item.artist.imageUrl, style='width: 180px;')
      a(href=item.artist.bugsUrl)
        h3 #{item.artist.name}

      h5(style='margin-top:-10px;') #{item.artist.debut}년 데뷔 (#{item.album.publisher})
      br
      if item.artist.style
        h5(style='white-space: pre-line;')= item.artist.style.split(',').join("\n")
      else
        h5(style='white-space: pre-line;')= item.artist.style
      p
        strong #{item.album.titleName}